<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cmpe277.sadp.certpinbasic.MainPageControlsFragment" 
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions_str" />
    
    
    <RadioGroup
        android:id="@+id/opt_key_valid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton 
            android:id="@+id/opt_use_valid"
            android:text="@string/use_valid" 
            android:checked="true"/>


        <RadioButton
            android:id="@+id/opt_use_invalid" 
            android:hint="@string/use_old" />
        
    </RadioGroup>
    <Button 
        android:id="@+id/btn_test_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/but_pin_str"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Main_Current_Cert_Txt" />
    
    <TextView 
        android:id="@+id/main_current_cert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Main_Received_Cert_Txt"/>
    
    <TextView 
        android:id="@+id/main_received_cert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
